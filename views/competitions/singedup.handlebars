<div class="overflow-x-auto">
        <table class="table">
            <!-- head -->
            <thead>
                <tr>
                    <th>ID natjecanje</th>
                    <th>ID korisnik</th>
                    <th>Vrijeme prijave</th>
                    <th>Bodovi</th>
                    <th>Ime</th>
                </tr>
            </thead>
            <!-- body -->
            <tbody>
                {{#each result.items}}
                <tr>
                    <th>{{this.id}}</th>
                    <td>{{this.competition_id}}</td>
                    <td>{{this.user_id}}</td>
                </tr>

                  <div class="line-clamp-2">
                            {{this.description}}
                        </div>
                    </td>
                    <td x-data="{}">
                        <span x-text="new Date('{{this.apply_till}}').toLocaleString()"></span>
                    </td>
                    <td>{{this.author}}</td>
                    <td class="flex flex-col gap-2">
                        <a href="/competitions/singup/{{this.id}}" class="btn btn-info btn-xs">Prijava</a>
                        {{#if ../user.is.admin}}
                        <a href="/competitions/edit/{{this.id}}" class="btn btn-accent btn-xs">Uredi</a>
                        <a href="/competitions/delete/{{this.id}}" class="btn btn-error btn-xs">Bri≈°i</a>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>